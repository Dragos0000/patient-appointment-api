# Patient Appointment API Environment Variables
# Copy this file to .env and modify the values as needed

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./patient_appointments.db
DB_ECHO=false

# Database Table Names
PATIENTS_TABLE_NAME=patients
APPOINTMENTS_TABLE_NAME=appointments

# Background Task Configuration
# How often to check for overdue appointments (in seconds)
# Examples: 60=1min, 300=5min, 900=15min, 1800=30min
BACKGROUND_TASK_INTERVAL=300

# Additional examples for different environments:
# Development (fast checking):
# BACKGROUND_TASK_INTERVAL=60

# Production (standard):
# BACKGROUND_TASK_INTERVAL=300

# Conservative (low frequency):
# BACKGROUND_TASK_INTERVAL=1800

# Example with custom table names:
# PATIENTS_TABLE_NAME=patient_records
# APPOINTMENTS_TABLE_NAME=appointment_bookings
